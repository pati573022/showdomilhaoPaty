<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SeuProjeto.JogoDoMilhaoPage"
             BackgroundColor="Black">

    <!-- Background Image -->
    <Grid>
        <Image Source="background_milhao.jpg" Aspect="AspectFill" />
        
        <!-- Overlay Content -->
        <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="20">

            <!-- Título -->
            <Label Text="JOGO DO MILHÃO"
                   FontSize="48"
                   TextColor="Gold"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>

            <!-- Imagem principal -->
            <Image Source="game_show_contestants.jpg" 
                   Aspect="AspectFit"
                   WidthRequest="300"
                   HeightRequest="200" />

            <!-- Botão "Começar" -->
            <Button Text="COMEÇAR"
                    BackgroundColor="Purple"
                    TextColor="Gold"
                    FontAttributes="Bold"
                    FontSize="24"
                    WidthRequest="200"
                    HeightRequest="60"
                    CornerRadius="30"
                    HorizontalOptions="Center"/>

        </VerticalStackLayout>
    </Grid>

</ContentPage>

